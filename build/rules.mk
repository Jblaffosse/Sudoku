#-----------------------------------------------------------------------------------------
# Compilation options: compiler and associated options
#-----------------------------------------------------------------------------------------
export CC=g++
export CFLAGS=-g -Wall -Werror -Wno-unknown-pragmas -Wextra -Wchkp -pedantic -Wundef -Waggregate-return

#-----------------------------------------------------------------------------------------
# Linker options: linker and associated options
#-----------------------------------------------------------------------------------------
export LD=g++
export LDFLAGS=

#-----------------------------------------------------------------------------------------
# Library options: Archiver and associated options
#-----------------------------------------------------------------------------------------
export AR=ar
export ARFLAGS=rcs

export RANLIB=ranlib

#-----------------------------------------------------------------------------------------
# Listing of the Source files and Object files to build
#-----------------------------------------------------------------------------------------
SRC=$(shell find .. -name "*.cpp")
OBJ=$(patsubst %.cpp, %.o, $(SRC))


